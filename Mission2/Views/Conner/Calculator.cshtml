@{
    ViewData["Title"] = "Grade Calculator";
}

@model CalculatorModel;

<h3 id="calc">Grade Calculator</h3> <!--Grade Calculator-->
<form method="post">
    <label>Assignments: </label>
    <input id="Assignments" asp-for="Assignment" /><br /><br />

    <label>Group Project: </label>
    <input id="Projects" asp-for="Project" /><br /><br />

    <label>Quizzes: </label>
    <input id="Quizzes" asp-for="Quiz" /><br /><br />

    <label>Exams: </label>
    <input id="Exams" asp-for="Exam" /><br /><br />

    <label>INTEX: </label>
    <input id="INTEX" asp-for="Intex" /><br /><br />

    <input id="calculate" type="submit" value="Calculate" />
    <div asp-validation-summary="All"></div>
</form>
<br />
<h4 id="display"></h4>

<script src="~/js/calculator.js"></script>
